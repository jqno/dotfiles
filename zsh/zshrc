# History
HISTFILE=~/.histfile
HISTSIZE=100000
SAVEHIST=100000
setopt hist_expire_dups_first
setopt appendhistory

# Settings
setopt autocd nomatch
unsetopt beep extendedglob notify

# Completions
zstyle :compinstall filename '/Users/jqno/.zshrc'
autoload -Uz compinit
compinit
# Case-insensitive completions
zstyle ':completion:*' matcher-list '' 'm:{a-zA-Z}={A-Za-z}' 'r:|[._-]=* r:|=*' 'l:|=* r:|=*'

# Colors
export LSCOLORS="Gxfxcxdxbxegedabagacad"
setopt prompt_subst

# VIM mode
bindkey -v
export KEYTIMEOUT=1
export EDITOR=vim
# Open VIM with current command line
autoload -U edit-command-line
zle -N edit-command-line
bindkey -M vicmd "\C-v" edit-command-line

# The delete button doesn't work unless we bind it to `delete-char`
bindkey "^[[3~" delete-char
bindkey -M vicmd "^[[3~" delete-char

# Source my scripts
export PATH=$PATH:~/scripts
source ~/.zsh/functions.sh
source ~/.zsh/environment.sh
source ~/.zsh/aliases.sh
source ~/.zsh/hotkeys.sh
source ~/.zsh/prompt.zsh

source ~/.zsh/vim-terminal-mode.sh
source ~/work/environment/environment.sh 2> /dev/null

# Colors in ls
export CLICOLOR=1

# Auto-suggesions
source /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh
bindkey '^[[Z' autosuggest-accept  # Shift-tab

# Syntax highlighting (must be at the end of .zshrc!)
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Enable FZF
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh



